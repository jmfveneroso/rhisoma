<% provide(:title, 'Change email') %>
<% content_for :errors do %>
  <%= render 'shared/error_messages' %>
<% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">Change Email</div>
      <div class="panel-body">
        <%= form_for(@user, url: email_reset_path(params[:id])) do |f| %>
          <%= label_tag :email %>
          <%= text_field_tag :email, @user.email, readonly: true, class: 'form-control' %>

          <%= f.label :new_email %>
          <%= f.text_field :new_email, value: @user.new_email, readonly: true, class: 'form-control' %>

          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>

          <%= f.submit "Update email", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
